@using System.Collections.Generic;
@model List<BugTracker.Models.ProfileViewModel>
<div class="container-fluid primary-content">
    <div class="widget">
        <div class="widget-content">
            <table class="table table-striped">
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Role
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Index", new { position = Model.IndexOf(item) }, new { @class = "btn btn-primary btn-xs" })
                        </td>                                          
                    </tr>
                }
            </table>
        </div>
    </div>
    @if(ViewBag.PickPosition != null)
    {
        @Html.Action("EditProfile", "Profile", new { profile = Model[ViewBag.PickPosition] })
    }
</div>