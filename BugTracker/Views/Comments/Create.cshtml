@model BugTracker.Models.Comment
<div class="container-fluid primary-content">
    <br />
    <div class="widget">
        <div class="widget-header clearfix">
            <h3><i class="icon ion-compose"></i> <span>Create New Comment for the @ViewBag.TicketTitle Ticket in the @ViewBag.Project Project</span></h3>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.TicketId)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-md" />
                    @Html.ActionLink("Cancel", "Details", "Tickets", new { ticketId = Model.TicketId}, new { @class = "btn btn-warning btn-md" })
                </div>
            }
        </div>
    </div>
</div>

