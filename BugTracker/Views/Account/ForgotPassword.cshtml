@model BugTracker.Models.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_NotAuthenticatedLayout.cshtml";
}

<div class="container-fluid primary-content not-authenticated">
    <br />
    <div class="widget">
        <div class="widget-header clearfix">
            <h3><i class="icon ion-compose"></i> <span>Enter Your Email Below to Retrieve Your Password</span></h3>
        </div>
        <div class="widget-content">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal partial-form", @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary btn-md" />
                </div>
            }
        </div>
    </div>
</div>

