@model IEnumerable<BugTracker.Models.Project>

<div id="transactionsButtons">
    @Html.ActionLink("Create New Project", "Create", null, new { @class = "btn btn-success" })
</div>
<div class="widget">
    <div class="widget-content">
        <table class="table table-striped">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Project Manager
                </th>
                <th>
                    Creation Date
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @String.Concat(item.Manager.FirstName, " ", item.Manager.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.CreationDate.ToString("d")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>